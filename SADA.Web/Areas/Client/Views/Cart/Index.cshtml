<form method="post">


	<div class="ps-hero bg--cover" data-background="@Url.Content("~/Admin/images/hero/bread-1.jpg")">
		<img src="~/Admin/images/hero/contact-us.html" alt="">
		<div class="ps-container">
			<h3>Shopping Cart</h3>
			<div class="ps-breadcrumb">
				<ol class="breadcrumb">
					<li>Home</li>
					<li class="active">Shopping Cart</li>
				</ol>
			</div>
			</div>
			</div>
<div class="ps-content">
    <div class="ps-container">
        <div class="ps-cart-listing">
            <table class="table ps-cart__table">
                <thead>
                    <tr>
                        <th>All Products</th>
						<th>Color</th>
					    <th>Size</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
					@foreach(var item in Model.ListCart){
                    <tr>
						<td ><a class="ps-product--compare" href="product-detail.html"><img class="mr-15" src="~/Admin/images/product/@item.Product.CoverUrl" alt="">@item.Product.Name</a></td>

								<td>
									
										<input type="color" value=@item.Color disabled />
									
									</td>
								
								<td >@item.Size</td>
								<td >@item.Price.ToString("N") x @item.Count</td>
								<td >
									
                            <div class="form-group--number">
								@* <form asp-action="Minus" asp-route-cartId="@item.Id" method="post">
										<button class="minus"><span>-</span></button>
										</form>
                                <input class="form-control" type="text" value="@item.Count">
								<form asp-action="Plus" asp-route-cartId="@item.Id" method="post">
										<button class="plus"><span>+</span></button>

										</form> *@

										<a asp-action="Plus" asp-route-cartId="@item.Id" class="btn btn-outline-light">
											<i class="bi bi-plus-square"></i>
										</a> &nbsp;
										
										<a asp-action="Minus" asp-route-cartId="@item.Id" class="btn btn-outline-dark">
											<i class="bi bi-dash-square"></i>
										</a>
                            </div>
                        </td>
								<td >@(item.Price * item.Count)</td>
                        <td>
                            <div class="ps-remove"><a asp-action="Remove"  asp-route-cartId="@item.Id"></a></div>
                        </td>
                    </tr>
                    }
                    
                </tbody>
            </table>
            <div class="ps-cart__actions">
                <div class="ps-cart__promotion">
                    <div class="form-group">
                        <div class="ps-form--icon">
                            <i class="fa fa-angle-right"></i>
                            <input class="form-control" type="text" placeholder="Promo Code">
                        </div>
                    </div>
                    <div class="form-group">
							<a asp-controller="Home" asp-action="Index" class="btn ps-btn ps-btn--gray">Continue Shopping</a>
                        @* <button class="ps-btn ps-btn--gray">Continue Shopping</button> *@
                    </div>
                </div>
                <div class="ps-cart__total">
						<h3>Total Price: <span> @Model.OrderHeader.OrderTotal.ToString("N")</span></h3><a asp-action="Summary" class="ps-btn">Process to checkout</a>
                </div>
            </div>
        </div>
    </div>
</div>
